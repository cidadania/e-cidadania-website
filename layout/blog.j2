{% extends "base.j2" %}

{% block container %}
<div class="row" style="margin-top:70px;">
    <div class="span16">
        <h1>{{ resource.meta.title }}</h1>
        <time datetime="{{ resource.meta.created.strftime('%Y-%m-%d') }}">
            Escrito el: {{ resource.meta.created.strftime('%a, %d %b %Y') }}
        </time>
        <div style="float:right;">
            <a href="https://twitter.com/share" class="twitter-share-button" data-count="horizontal">Tweet</a>
            <script type="text/javascript" src="//platform.twitter.com/widgets.js"></script>
            
            <iframe src="//www.facebook.com/plugins/like.php?href&amp;send=false&amp;layout=button_count&amp;width=200&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:200px; height:21px;" allowTransparency="true"></iframe>
        </div>
        <hr>
        {% filter markdown|typogrify -%}
            {% mark post -%}
                {% block post -%}{%- endblock %}
            {%- endmark %}
        {%- endfilter %}
        <hr>
        <a class="btn small{{' disabled' if not resource.prev_by_publishingtime }}" style="float:left;" title="{{ resource.prev_by_publishingtime.meta.title }}" {% if resource.prev_by_publishingtime %}href="{{ content_url(resource.prev_by_publishingtime.url) }}"{% endif %}>&laquo; Anterior</a>
        <a class="btn small{{' disabled' if not resource.next_by_publishingtime }}" style="float:right;" stitle="{{ resource.next_by_publishingtime.meta.title }}" {% if resource.next_by_publishingtime %}href="{{ content_url(resource.next_by_publishingtime.url) }}"{% endif %}>Siguiente &raquo;</a>
    </div>
</div>
{% endblock %}
